.detailTabbar {
  width: 100vw;
  height: 100rpx;
  line-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: flex;
  background-color: white;
  padding: 20rpx;
}

.detailTabbar view {
  flex: 1;
}

.detailTabbar view.active {
  border-bottom: 3rpx solid red;
}

.user {
  overflow: hidden;
  padding: 20rpx;
}

.user .avatar {
  float: left;
  width: 100rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user .nickname {
  float: left;
  height: 100rpx;
  line-height: 100rpx;
}

.user .creationTime {
  float: right;
  height: 100rpx;
  line-height: 100rpx;
}

.content {
  padding: 20rpx;
}

.content image {
  width: 200rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  background-color: white;
}

.footer view {
  flex: 1;
  color: white;
}