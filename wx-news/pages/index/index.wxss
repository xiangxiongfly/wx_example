/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.tab-bar {
  display: flex;
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #f8f8f8;
}

.tab-item {
  flex: 1;
  text-align: center;
}



.news-item {
  display: flex;
  margin: 10px;
}

.news-item .news-image {
  width: 100px;
  height: 100px;
  border-radius: 16px;
}

.news-item .news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.news-content .news-title {
  font-size: 16px;
  color: #333;
}

.news-content .news-description {
  font-size: 14px;
  color: #999;
}